{
    "compilerOptions": {
        "target": "ES2020", // or a target appropriate for your Node.js version on Heroku
        "module": "CommonJS", // Heroku uses Node.js which is compatible with CommonJS
        "lib": [
            "esnext"
        ],
        "baseUrl": "./src",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}